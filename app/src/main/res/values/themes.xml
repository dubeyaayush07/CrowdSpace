<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrowdSpace" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E4EBF5</item>
        <item name="colorPrimaryVariant">#66b2b2</item>
        <item name="colorOnPrimary">#0B0D0C</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0B0D0C</item>
        <item name="colorSecondaryVariant">#66b2b2</item>
        <item name="colorOnSecondary">#E4EBF5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullScreen" parent="Theme.CrowdSpace">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NuemorphismImage">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_4sdp</item>
    </style>
    <style name="NuemorphismCard">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_10sdp</item>
    </style>
</resources>