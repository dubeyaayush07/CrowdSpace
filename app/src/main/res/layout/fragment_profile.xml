<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f2f5">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#f0f2f5"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#66b2b2"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="MEDICAL DETAILS"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:neumorph_shapeType="flat">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:hint="Name"
                    android:textColorHint="#7D818A"
                    app:boxBackgroundColor="#f0f2f5"
                    app:boxStrokeColor="#f0f2f5"
                    app:boxStrokeErrorColor="#f0f2f5"
                    app:boxStrokeWidth="1.5dp"
                    app:helperTextTextColor="#7D818A"
                    app:hintTextColor="#66b2b2"
                    app:placeholderTextColor="#7D818A">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColor="#3b3c36"
                        android:textFontWeight="450" />

                </com.google.android.material.textfield.TextInputLayout>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Neumorph.CardView"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="5dp"
                app:neumorph_shapeType="flat">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:hint="Height in centimeter"
                    android:textColorHint="#7D818A"
                    app:helperTextTextColor="#7D818A"
                    app:boxStrokeColor="#f0f2f5"
                    app:placeholderTextColor="#7D818A"
                    app:hintTextColor="#66b2b2"
                    app:boxStrokeWidth="1.5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:id="@+id/height"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textFontWeight="450"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#3b3c36"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Neumorph.CardView"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="5dp"
                app:neumorph_shapeType="flat">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:hint="Weight in kilograms"
                    android:textColorHint="#7D818A"
                    app:helperTextTextColor="#7D818A"
                    app:placeholderTextColor="#7D818A"
                    app:boxStrokeColor="#f0f2f5"
                    app:hintTextColor="#66b2b2"
                    app:boxStrokeWidth="1.5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/weight"
                        android:textFontWeight="450"
                        android:textCursorDrawable="@drawable/cursor"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#3b3c36"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Neumorph.CardView"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:neumorph_shapeType="flat">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:hint="Blood Group"
                    android:textColorHint="#7D818A"
                    app:helperTextTextColor="#7D818A"
                    app:placeholderTextColor="#7D818A"
                    app:boxStrokeColor="#f0f2f5"
                    app:hintTextColor="#66b2b2"
                    app:boxStrokeWidth="1.5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/blood"
                        android:textFontWeight="450"
                        android:textCursorDrawable="@drawable/cursor"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#3b3c36"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </soup.neumorphism.NeumorphCardView>


            <soup.neumorphism.NeumorphButton
                android:id="@+id/save_btn"
                android:height="80dp"
                android:layout_marginTop="16dp"
                style="@style/Widget.Neumorph.Button"
                android:layout_marginHorizontal="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.1"
                android:text="Save"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                app:neumorph_backgroundColor="#66b2b2"
                app:neumorph_shadowColorDark="#cdcdcd"
                app:neumorph_shadowColorLight="#f6f6f6"
                app:neumorph_shapeType="flat"
                app:rippleColor="@color/white"
                />

        </LinearLayout>
    </ScrollView>


</layout>