<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:background="#f0f2f5">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#66b2b2"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="QUEUE"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="450"
                android:text="@string/name"
                android:textColor="#66b2b2"
                android:textSize="22.5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/queueSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"
                android:text="Queue Size 0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Doctor Status" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textFontWeight="600"
                android:textColor="#66b2b2"
                android:layout_marginBottom="20dp"
                android:text="Status" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/index"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/not_found_in_queue"
                android:textFontWeight="460"
                android:textSize="16sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:id="@+id/time"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:textFontWeight="460"
                android:text="Time" />

        </LinearLayout>



        <soup.neumorphism.NeumorphButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:height="75dp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            app:neumorph_backgroundColor="#66b2b2"
            style="@style/Widget.Neumorph.Button"
            android:visibility="gone"
            android:id="@+id/addBtn"/>


        <soup.neumorphism.NeumorphButton
            android:layout_width="match_parent"
            style="@style/Widget.Neumorph.Button"
            android:layout_height="wrap_content"
            android:height="75dp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:textColor="@color/white"
            app:neumorph_backgroundColor="#66b2b2"
            android:text="Scan"
            android:textSize="@dimen/_15sdp"
            android:visibility="gone"
            android:id="@+id/scanBtn"/>

    </LinearLayout>

</layout>
